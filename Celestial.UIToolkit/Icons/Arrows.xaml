<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- A 'half'-arrow basically looks like this:  >  -->
    <GeometryGroup x:Key="HalfArrowUp">
        <PathGeometry>M 0,5 L 5,0 L 10,5</PathGeometry>
    </GeometryGroup>
    
    <GeometryGroup x:Key="HalfArrowDown">
        <PathGeometry>M 0,0 L 5,5 L 10,0</PathGeometry>
    </GeometryGroup>

    <GeometryGroup x:Key="HalfArrowRight">
        <PathGeometry>M 0,0 L 5,5 L 0,10</PathGeometry>
    </GeometryGroup>

    <GeometryGroup x:Key="HalfArrowLeft">
        <PathGeometry>M 10,0 L 0,5 L 10,10</PathGeometry>
    </GeometryGroup>
    
</ResourceDictionary>