<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
                    xmlns:ics="http://icsharpcode.net/sharpdevelop/avalonedit"
                    xmlns:converters="clr-namespace:ControlGallery.Converters">

    <Style TargetType="smtx:XamlDisplay" BasedOn="{StaticResource {x:Type smtx:XamlDisplay}}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="smtx:XamlDisplay">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />

                        <ics:TextEditor Grid.Row="1"
                                        Document="{Binding Xaml, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static converters:StringToTextDocumentConverter.Default}}"
                                        SyntaxHighlighting="XML"
                                        FontSize="12pt"
                                        FontFamily="Consolas"
                                        IsReadOnly="True"
                                        HorizontalScrollBarVisibility="Auto"
                                        VerticalScrollBarVisibility="Auto" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>