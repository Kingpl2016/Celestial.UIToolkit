<Window x:Class="ControlGallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlGallery"
        xmlns:pages="clr-namespace:ControlGallery.Pages"
        xmlns:c="http://celestial-ui.com"
        mc:Ignorable="d"
        Title="Aurora UI Toolkit - Control Gallery"
        Width="1000" Height="600">

    <c:NavigationView x:Name="NavView"
                      PaneHeader="Pane Title"
                      Header="Sample Application"
                      IsSettingsVisible="True"
                      SelectedItem="{x:Null}"
                      BackRequested="NavView_BackRequested"
                      ItemInvoked="NavView_ItemInvoked">
        <c:NavigationView.MenuItems>
            <c:NavigationViewItem Content="Item 1">
                <c:NavigationViewItem.Icon>
                    <c:PathIcon Data="{StaticResource HalfArrowRight}" />
                </c:NavigationViewItem.Icon>
            </c:NavigationViewItem>
            <c:NavigationViewItem Content="Item 2">
                <c:NavigationViewItem.Icon>
                    <c:PathIcon Data="{StaticResource HalfArrowRight}" />
                </c:NavigationViewItem.Icon>
            </c:NavigationViewItem>
            <c:NavigationViewItem Content="Item 3">
                <c:NavigationViewItem.Icon>
                    <c:PathIcon Data="{StaticResource HalfArrowRight}" />
                </c:NavigationViewItem.Icon>
            </c:NavigationViewItem>
            <c:NavigationViewItem Content="Disabled Item" IsEnabled="False">
                <c:NavigationViewItem.Icon>
                    <c:PathIcon Data="{StaticResource HalfArrowRight}" />
                </c:NavigationViewItem.Icon>
            </c:NavigationViewItem>
        </c:NavigationView.MenuItems>

        <StackPanel Margin="20" c:MarginHelper.ChildrenMargin="10">
            <TextBox x:Name="StdTxt" Width="200" HorizontalAlignment="Center" VerticalAlignment="Top">Standard</TextBox>
            <TextBox x:Name="Placeholder"
                     Width="200" HorizontalAlignment="Center" 
                     VerticalAlignment="Top"
                     c:PlaceholderProperties.Placeholder="Placeholder Text"
                     c:TextBoxProperties.AssistiveText="Helper text below the box"
                     AcceptsReturn="True"></TextBox>
            <TextBox IsReadOnly="True" Width="200" HorizontalAlignment="Center" VerticalAlignment="Top">ReadOnly</TextBox>
            <TextBox IsEnabled="False" Width="200" HorizontalAlignment="Center" VerticalAlignment="Top">Disabled</TextBox>
            <TextBox Width="200" HorizontalAlignment="Center" VerticalAlignment="Top"
                     c:TextBoxProperties.AssistiveText="AssistiveText"
                     c:TextBoxProperties.ShowFocusedIndicator="True">
                <TextBox.Text>
                    <Binding Path="Text"
                             ElementName="StdTxt"
                             NotifyOnValidationError="True">
                        <Binding.ValidationRules>
                            <local:NumericValidationRule ValidatesOnTargetUpdated="True" />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
        </StackPanel>

