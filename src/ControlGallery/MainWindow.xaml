<Window x:Class="ControlGallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:pages="clr-namespace:ControlGallery.Pages"
        xmlns:c="http://celestial-ui.com"
        mc:Ignorable="d"
        Background="{StaticResource PrimaryBrush}"
        Title="Aurora UI Toolkit - Control Gallery"
        Width="1000" Height="600">
    
    <c:NavigationView x:Name="NavView"
                      PaneHeader="Pane Title"
                      Header="Header!"
                      IsSettingsVisible="True"
                      SelectedItem="{x:Null}"
                      BackRequested="NavView_BackRequested"
                      ItemInvoked="NavView_ItemInvoked">
        <c:NavigationView.PaneFooter>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Hello from the Footer!</TextBlock>
        </c:NavigationView.PaneFooter>
        <c:NavigationView.MenuItems>
            <c:NavigationViewItem Content="Item 1">
                <c:NavigationViewItem.Icon>
                    <c:PathIcon Data="{StaticResource HalfArrowRight}" />
                </c:NavigationViewItem.Icon>
            </c:NavigationViewItem>
            <c:NavigationViewItem Content="Item 2">
                <c:NavigationViewItem.Icon>
                    <c:PathIcon Data="{StaticResource HalfArrowRight}" />
                </c:NavigationViewItem.Icon>
            </c:NavigationViewItem>
            <c:NavigationViewItem Content="Item 3">
                <c:NavigationViewItem.Icon>
                    <c:PathIcon Data="{StaticResource HalfArrowRight}" />
                </c:NavigationViewItem.Icon>
            </c:NavigationViewItem>
            <c:NavigationViewItem Content="No Icon">
            </c:NavigationViewItem>
            <c:NavigationViewItem Content="Disabled" IsEnabled="False">
                <c:NavigationViewItem.Icon>
                    <c:PathIcon Data="{StaticResource HalfArrowRight}" />
                </c:NavigationViewItem.Icon>
            </c:NavigationViewItem>
        </c:NavigationView.MenuItems>

        <ScrollViewer>
            <StackPanel >
                <CheckBox IsChecked="{Binding IsPaneContentVisible, ElementName=NavView, Mode=TwoWay}">IsPaneContentVisible</CheckBox>
                <CheckBox IsChecked="{Binding IsBackButtonVisible, ElementName=NavView, Mode=TwoWay}">IsBackButtonVisible</CheckBox>
                <CheckBox IsChecked="{Binding IsToggleButtonVisible, ElementName=NavView, Mode=TwoWay}">IsToggleButtonVisible</CheckBox>
                <CheckBox IsChecked="{Binding AlwaysShowHeader, ElementName=NavView, Mode=TwoWay}">AlwaysShowHeader</CheckBox>
                <Slider Value="{Binding CompactModeThresholdWidth, ElementName=NavView, Mode=TwoWay}" 
                        Minimum="0"
                        Maximum="2000" />
                <Slider Value="{Binding ExpandedModeThresholdWidth, ElementName=NavView, Mode=TwoWay}"
                        Minimum="0"
                        Maximum="2000" />
                <Button Click="ChangeMenuItemButton_Click">
                    Change MenuItems
                </Button>
                <Button Click="ClearMenuItemsButton_Click">
                    Clear MenuItems
                </Button>
                <Button Click="ChangeMenuItemsSource_Click">
                    Change To ItemsSource
                </Button>
                <Button Click="ClearMenuItemsSource_Click">
                    Clear ItemsSource
                </Button>

                <Separator />

                <Border Width="100" Height="100"
                        BorderThickness="1"
                        BorderBrush="Black" Background="White">
                    <Border.Effect>
                        <DropShadowEffect x:Name="Shadow" Color="Black" />
                    </Border.Effect>

                    <Border Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center"
                            Background="Red"/>
                </Border>

                <Label>Blur Radius</Label>
                <Slider Minimum="-100" Maximum="100" Value="{Binding ElementName=Shadow, Path=BlurRadius}" />
                <Label>Direction</Label>
                <Label Content="{Binding Direction, ElementName=Shadow}"></Label>
                <Slider Minimum="0" Maximum="360" Value="{Binding ElementName=Shadow, Path=Direction}" />
                <Label>ShadowDepth</Label>
                <Slider Minimum="0" Maximum="100" Value="{Binding ElementName=Shadow, Path=ShadowDepth}" />


                <c:DropShadowPanel x:Name="P" Margin="100">
                    <Border Width="100" Height="100" Background="Red" />
                </c:DropShadowPanel>
                <Label>Blur Radius</Label>
                <Slider Minimum="-100" Maximum="100" Value="{Binding ElementName=P, Path=BlurRadius}" />
                <Label Content="{Binding OffsetX, ElementName=P}"></Label>
                <Slider Minimum="-100" Maximum="100" Value="{Binding ElementName=P, Path=OffsetX}" />
                <Label Content="{Binding OffsetY, ElementName=P}"></Label>
                <Slider Minimum="-100" Maximum="100" Value="{Binding ElementName=P, Path=OffsetY}" />
            </StackPanel>
        </ScrollViewer>
    </c:NavigationView>

