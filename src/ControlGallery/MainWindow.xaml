<Window x:Class="ControlGallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:pages="clr-namespace:ControlGallery.Pages"
        xmlns:c="http://celestial-ui.com"
        mc:Ignorable="d"
        Background="{StaticResource PrimaryBrush}"
        Title="Aurora UI Toolkit - Control Gallery"
        Width="1000" Height="600">

    <StackPanel>
        <StackPanel.Resources>
            <Style x:Key="ShadowButton" TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="LightGray" Width="300" Height="300">
                                <c:DropShadowPanel x:Name="ThemeShadowHost"
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center" 
                                                   BlurRadius="0">
                                    <Border Background="White" Width="250" Height="250">
                                        <ContentPresenter />
                                    </Border>
                                </c:DropShadowPanel>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </StackPanel.Resources>

        <Button Style="{StaticResource ShadowButton}">

            <c:ThemeShadowHost HorizontalAlignment="Center" VerticalAlignment="Center">
                <c:ThemeShadowHost.ThemeShadow>
                    <c:ThemeShadow />
                </c:ThemeShadowHost.ThemeShadow>
                <Border Width="100" Height="100" Background="Red" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </c:ThemeShadowHost>
        </Button>
    </StackPanel>
    
