<Window x:Class="ControlGallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:pages="clr-namespace:ControlGallery.Pages"
        xmlns:c="http://celestial-ui.com"
        mc:Ignorable="d"
        Background="{StaticResource BaseHighestBrush}"
        Title="Aurora UI Toolkit - Control Gallery"
        Width="1000" Height="600">

    <Window.Resources>
        <ObjectDataProvider x:Key="SplitViewDisplayModeDataProvider" MethodName="GetValues"
                            ObjectType="{x:Type c:SplitViewDisplayMode}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="c:SplitViewDisplayMode"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="SplitViewPanePlacementDataProvider" MethodName="GetValues"
                            ObjectType="{x:Type c:SplitViewPanePlacement}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="c:SplitViewPanePlacement"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>

    <c:MarginHelper.MarginGroups>
        <c:MarginGroup Name="Title" Margin="0,0,0,10" />
        <c:MarginGroup Name="CloseHorizontal" Margin="0,0,5,0" />
        <c:MarginGroup Name="CloseVertical" Margin="0,0,0,5" />
        <c:MarginGroup Name="ControlGroup" Margin="10" />
    </c:MarginHelper.MarginGroups>

    <c:SplitView x:Name="SplitView" PanePlacement="Right">
        <StackPanel>
            <StackPanel c:MarginHelper.ChildrenMargin="{c:GridUnit 4}">
                <TextBlock>Hello World!</TextBlock>
                <CheckBox IsChecked="{Binding IsPaneOpen, ElementName=SplitView, Mode=TwoWay}">
                    IsPaneOpen
                </CheckBox>
                <ComboBox SelectedItem="{Binding DisplayMode, ElementName=SplitView, Mode=TwoWay}"
                          ItemsSource="{Binding Source={StaticResource SplitViewDisplayModeDataProvider}}"
                          Style="{x:Null}"/>
                <ComboBox SelectedItem="{Binding PanePlacement, ElementName=SplitView, Mode=TwoWay}"
                          ItemsSource="{Binding Source={StaticResource SplitViewPanePlacementDataProvider}}"
                          Style="{x:Null}"/>
            </StackPanel>
            <Border Width="200" Height="200" Background="DimGray" />
        </StackPanel>
    </c:SplitView>
    
