    <c:NavigationView x:Name="NavView"
                      PaneHeader="Pane Title"
                      Header="Header!"
                      IsSettingsVisible="True"
                      SelectedItem="{x:Null}"
                      BackRequested="NavView_BackRequested"
                      ItemInvoked="NavView_ItemInvoked">
        <c:NavigationView.PaneFooter>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Hello from the Footer!</TextBlock>
        </c:NavigationView.PaneFooter>
        <c:NavigationView.MenuItems>
            <c:NavigationViewItem Content="Item 1">
                <c:NavigationViewItem.Icon>
                    <c:PathIcon Data="{StaticResource HalfArrowRight}" />
                </c:NavigationViewItem.Icon>
            </c:NavigationViewItem>
            <c:NavigationViewItem Content="Item 2">
                <c:NavigationViewItem.Icon>
                    <c:PathIcon Data="{StaticResource HalfArrowRight}" />
                </c:NavigationViewItem.Icon>
            </c:NavigationViewItem>
            <c:NavigationViewItem Content="Item 3">
                <c:NavigationViewItem.Icon>
                    <c:PathIcon Data="{StaticResource HalfArrowRight}" />
                </c:NavigationViewItem.Icon>
            </c:NavigationViewItem>
            <c:NavigationViewItem Content="No Icon">
            </c:NavigationViewItem>
            <c:NavigationViewItem Content="Disabled" IsEnabled="False">
                <c:NavigationViewItem.Icon>
                    <c:PathIcon Data="{StaticResource HalfArrowRight}" />
                </c:NavigationViewItem.Icon>
            </c:NavigationViewItem>
        </c:NavigationView.MenuItems>

        <ScrollViewer>
            <StackPanel >
                <CheckBox IsChecked="{Binding IsPaneContentVisible, ElementName=NavView, Mode=TwoWay}">IsPaneContentVisible</CheckBox>
                <CheckBox IsChecked="{Binding IsBackButtonVisible, ElementName=NavView, Mode=TwoWay}">IsBackButtonVisible</CheckBox>
                <CheckBox IsChecked="{Binding IsToggleButtonVisible, ElementName=NavView, Mode=TwoWay}">IsToggleButtonVisible</CheckBox>
                <CheckBox IsChecked="{Binding AlwaysShowHeader, ElementName=NavView, Mode=TwoWay}">AlwaysShowHeader</CheckBox>
                <Slider Value="{Binding CompactModeThresholdWidth, ElementName=NavView, Mode=TwoWay}" 
                        Minimum="0"
                        Maximum="2000" />
                <Slider Value="{Binding ExpandedModeThresholdWidth, ElementName=NavView, Mode=TwoWay}"
                        Minimum="0"
                        Maximum="2000" />
                <Button Click="ChangeMenuItemButton_Click">
                    Change MenuItems
                </Button>
                <Button Click="ClearMenuItemsButton_Click">
                    Clear MenuItems
                </Button>
                <Button Click="ChangeMenuItemsSource_Click">
                    Change To ItemsSource
                </Button>
                <Button Click="ClearMenuItemsSource_Click">
                    Clear ItemsSource
                </Button>

                <Button x:Name="ToggleShadowsButton" Click="ToggleShadowsButton_Click">
                    Toggle Shadows
                </Button>

                <Separator />

                <Border Width="200" Height="200"
                        BorderThickness="1"
                        BorderBrush="Black" Background="White">
                    <c:DropShadowDecorator x:Name="ShadowDecorator" BlurRadius="10" OffsetX="-20" IsShadowEnabled="False">
                        <Border Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center"
                                Background="Red">
                            <CheckBox IsChecked="{Binding IsShadowEnabled, ElementName=ShadowDecorator}" />
                        </Border>
                    </c:DropShadowDecorator>
                </Border>
                
                <pages:Buttons />
                <pages:Cards />
            </StackPanel>
        </ScrollViewer>
    </c:NavigationView>

