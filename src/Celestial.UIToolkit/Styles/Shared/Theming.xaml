    </Style>

    <!--
    - Background: -
    - Border:     Accent1
    - Foreground: -
    -->
    <Style x:Key="Accent1Border" TargetType="FrameworkElement">
        <Setter Property="Control.BorderBrush" Value="{StaticResource Accent1MediumBrush}" />
        <Setter Property="theming:MouseOverProperties.BorderBrush" Value="{StaticResource Accent1HighBrush}" />
        <Setter Property="theming:PressedProperties.BorderBrush" Value="{StaticResource Accent1LowBrush}" />
        <Setter Property="theming:DisabledProperties.BorderBrush" Value="{StaticResource BaseHighBrush}" />
        <Setter Property="theming:ActiveProperties.BorderBrush" Value="{StaticResource Accent1LowBrush}" />
