    <!--
    - Background: Accent2
    - Border:     -
    - Foreground: -
    -->
    <Style x:Key="Accent2Background" TargetType="FrameworkElement">
        <Setter Property="Control.Background" Value="{StaticResource Accent2MediumBrush}" />
        <Setter Property="theming:MouseOverProperties.BackgroundBrush" Value="{StaticResource Accent2HighBrush}" />
        <Setter Property="theming:PressedProperties.BackgroundBrush" Value="{StaticResource Accent2LowBrush}" />
        <Setter Property="theming:DisabledProperties.BackgroundBrush" Value="{StaticResource BaseHighBrush}" />
