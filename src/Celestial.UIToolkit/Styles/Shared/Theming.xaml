<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:theming="clr-namespace:Celestial.UIToolkit.Theming">

    <!--
    This file contains base-styles for nearly any type of control.
    These styles set all of the *Properties in the Theming namespace.
    -->


    <!--
    - Background: Transparent
    - Border:     -
    - Foreground: -
    -->
    <Style x:Key="TransparentBackgroundThemingBase" TargetType="FrameworkElement">
        <Setter Property="theming:MouseOverProperties.BackgroundColor" Value="Transparent" />
        <Setter Property="theming:PressedProperties.BackgroundColor" Value="Transparent" />
        <Setter Property="theming:DisabledProperties.BackgroundColor" Value="Transparent" />
        <Setter Property="theming:ValidationProperties.BackgroundColor" Value="Transparent" />
    </Style>
    
    <!--
    - Background: BaseHighest
    - Border:     -
    - Foreground: -
    -->
    <Style x:Key="BaseHighestBackgroundThemingBase" TargetType="Border">
        <Setter Property="theming:MouseOverProperties.BackgroundColor" Value="{StaticResource BaseHighestColor}" />
        <Setter Property="theming:PressedProperties.BackgroundColor" Value="{StaticResource BaseHighestColor}" />
        <Setter Property="theming:DisabledProperties.BackgroundColor" Value="{StaticResource BaseHighestColor}" />
        <Setter Property="theming:ValidationProperties.BackgroundColor" Value="{StaticResource BaseHighestColor}" />
    </Style>
    
    <!--
    - Background: -
    - Border:     Transparent
    - Foreground: -
    -->
    <Style x:Key="TransparentBorderThemingBase" TargetType="FrameworkElement">
        <Setter Property="theming:MouseOverProperties.BorderColor" Value="Transparent" />
        <Setter Property="theming:PressedProperties.BorderColor" Value="Transparent" />
        <Setter Property="theming:DisabledProperties.BorderColor" Value="{StaticResource BaseHighColor}" />
        <Setter Property="theming:ValidationProperties.BorderColor" Value="{StaticResource ErrorMediumColor}" />
    </Style>

    <!--
    - Background: -
    - Border:     Accent2
    - Foreground: -
    -->
    <Style x:Key="Accent2Border" TargetType="FrameworkElement">
        <Setter Property="theming:MouseOverProperties.BorderColor" Value="{StaticResource Accent2HighColor}" />
        <Setter Property="theming:PressedProperties.BorderColor" Value="{StaticResource Accent2LowColor}" />
        <Setter Property="theming:DisabledProperties.BorderColor" Value="{StaticResource BaseHighColor}" />
        <Setter Property="theming:ValidationProperties.BorderColor" Value="{StaticResource ErrorMediumColor}" />
    </Style>

    <Style x:Key="Merge" TargetType="FrameworkElement" BasedOn="{theming:MultiStyle 'Accent2Border BaseHighestBackgroundThemingBase'}">
        
    </Style>
    
    <!--
    - Background: Transparent
    - Border:     Accent2
    - Foreground: Standard
    -->
    <Style x:Key="Accent2BorderThemingBase" TargetType="FrameworkElement">
        <Setter Property="theming:ControlProperties.CornerRadius" Value="{StaticResource StandardCornerRadius}" />
        
        <Setter Property="theming:MouseOverProperties.BorderColor" Value="{StaticResource Accent2HighColor}" />
        <Setter Property="theming:MouseOverProperties.BackgroundColor" Value="{StaticResource BaseHighestColor}" />
        <Setter Property="theming:MouseOverProperties.ForegroundBrush" Value="{StaticResource StandardForegroundBrush}" />

        <Setter Property="theming:PressedProperties.BorderColor" Value="{StaticResource Accent2LowColor}" />
        <Setter Property="theming:PressedProperties.BackgroundColor" Value="{StaticResource BaseHighestColor}" />
        <Setter Property="theming:PressedProperties.ForegroundBrush" Value="{StaticResource StandardForegroundBrush}" />

        <Setter Property="theming:ActiveProperties.BorderColor" Value="{StaticResource Accent2MediumColor}" />
        <Setter Property="theming:ActiveProperties.BackgroundColor" Value="{StaticResource BaseHighestColor}" />
        <Setter Property="theming:ActiveProperties.ForegroundBrush" Value="{StaticResource StandardForegroundBrush}" />

        <Setter Property="theming:DisabledProperties.BorderColor" Value="{StaticResource BaseHighColor}" />
        <Setter Property="theming:DisabledProperties.BackgroundColor" Value="Transparent" />
        <Setter Property="theming:DisabledProperties.ForegroundBrush" Value="{StaticResource DisabledForegroundBrush}" />

        <Setter Property="theming:ValidationProperties.BackgroundColor" Value="{StaticResource ErrorMediumColor}" />
        <Setter Property="theming:ValidationProperties.BorderColor" Value="{StaticResource ErrorMediumColor}" />
        <Setter Property="theming:ValidationProperties.ForegroundBrush" Value="{StaticResource StandardForegroundBrush}" />
    </Style>

    <!--
    - Background: Transparent
    - Border:     Accent2
    - Foreground: Bound to Self
    -->
    <Style x:Key="Accent2BorderWithForegroundThemingBase" TargetType="FrameworkElement" BasedOn="{StaticResource Accent2BorderThemingBase}">
        <Setter Property="theming:MouseOverProperties.ForegroundBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
        <Setter Property="theming:PressedProperties.ForegroundBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
        <Setter Property="theming:ActiveProperties.ForegroundBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
        <Setter Property="theming:ValidationProperties.ForegroundBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
    </Style>

    <!--
    For controls like Label, TextBlock, ...
    Only the Foreground is set here.
    - Background: Transparent
    - Border:     Transparent
    - Foreground: Bound to Self
    -->
    <Style x:Key="TextElementThemingBase" TargetType="FrameworkElement">
        <Setter Property="theming:MouseOverProperties.ForegroundBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
        <Setter Property="theming:PressedProperties.ForegroundBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
        <Setter Property="theming:ActiveProperties.ForegroundBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
        <Setter Property="theming:ValidationProperties.ForegroundBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
    </Style>
    
</ResourceDictionary>