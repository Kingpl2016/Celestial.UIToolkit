    <!--
    - Background: -
    - Border:     Transparent
    - Foreground: -
    -->
    <Style x:Key="TransparentBorder" TargetType="FrameworkElement">
        <Setter Property="Control.BorderBrush" Value="Transparent" />
        <Setter Property="theming:MouseOverProperties.BorderBrush" Value="Transparent" />
        <Setter Property="theming:PressedProperties.BorderBrush" Value="Transparent" />
        <Setter Property="theming:DisabledProperties.BorderBrush" Value="Transparent" />
        <Setter Property="theming:ActiveProperties.BorderBrush" Value="Transparent" />
    </Style>

    <!--
    - Background: -
    - Border:     Standard (Base* Variations)
    - Foreground: -
    -->
    <Style x:Key="StandardBorder" TargetType="FrameworkElement">
        <Setter Property="Control.BorderBrush" Value="{StaticResource BaseMediumBrush}" />
        <Setter Property="theming:MouseOverProperties.BorderBrush" Value="{StaticResource BaseHighBrush}" />
        <Setter Property="theming:PressedProperties.BorderBrush" Value="{StaticResource BaseLowBrush}" />
        <Setter Property="theming:DisabledProperties.BorderBrush" Value="{StaticResource BaseHighBrush}" />
