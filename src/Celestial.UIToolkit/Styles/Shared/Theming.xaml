    <Style x:Key="Accent2Border" TargetType="FrameworkElement">
        <Setter Property="Control.BorderBrush" Value="{StaticResource Accent2MediumBrush}" />
        <Setter Property="theming:MouseOverProperties.BorderBrush" Value="{StaticResource Accent2HighBrush}" />
        <Setter Property="theming:PressedProperties.BorderBrush" Value="{StaticResource Accent2LowBrush}" />
        <Setter Property="theming:DisabledProperties.BorderBrush" Value="{StaticResource BaseHighBrush}" />
        <Setter Property="theming:ActiveProperties.BorderBrush" Value="{StaticResource Accent2LowBrush}" />
    </Style>



    <!--
    - Background: -
    - Border:     -
    - Foreground: StandardForegroundBrush / DisabledForegroundBrush
    -->
    <Style x:Key="StandardForeground" TargetType="FrameworkElement">
        <Setter Property="Control.Foreground" Value="{StaticResource StandardForegroundBrush}" />
        <Setter Property="theming:MouseOverProperties.ForegroundBrush" Value="{StaticResource StandardForegroundBrush}" />
        <Setter Property="theming:PressedProperties.ForegroundBrush" Value="{StaticResource StandardForegroundBrush}" />
        <Setter Property="theming:DisabledProperties.ForegroundBrush" Value="{StaticResource DisabledForegroundBrush}" />
        <Setter Property="theming:ActiveProperties.ForegroundBrush" Value="{StaticResource StandardForegroundBrush}" />
    </Style>
    
    <!--
    - Background: -
    - Border:     -
    - Foreground: OnAccent1
    -->
    <Style x:Key="OnAccent1Foreground" TargetType="FrameworkElement">
        <Setter Property="Control.Foreground" Value="{StaticResource OnAccent1ForegroundBrush}" />
        <Setter Property="theming:MouseOverProperties.ForegroundBrush" Value="{StaticResource OnAccent1ForegroundBrush}" />
        <Setter Property="theming:PressedProperties.ForegroundBrush" Value="{StaticResource OnAccent1ForegroundBrush}" />
        <Setter Property="theming:DisabledProperties.ForegroundBrush" Value="{StaticResource OnAccent1DisabledForegroundBrush}" />
        <Setter Property="theming:ActiveProperties.ForegroundBrush" Value="{StaticResource OnAccent1ForegroundBrush}" />
    </Style>
    
    <!--
    - Background: -
    - Border:     -
    - Foreground: OnAccent2
    -->
    <Style x:Key="OnAccent2Foreground" TargetType="FrameworkElement">
        <Setter Property="Control.Foreground" Value="{StaticResource OnAccent2ForegroundBrush}" />
        <Setter Property="theming:MouseOverProperties.ForegroundBrush" Value="{StaticResource OnAccent2ForegroundBrush}" />
        <Setter Property="theming:PressedProperties.ForegroundBrush" Value="{StaticResource OnAccent2ForegroundBrush}" />
        <Setter Property="theming:DisabledProperties.ForegroundBrush" Value="{StaticResource OnAccent2DisabledForegroundBrush}" />
        <Setter Property="theming:ActiveProperties.ForegroundBrush" Value="{StaticResource OnAccent2ForegroundBrush}" />
    </Style>

    <!--
    - Background: -
    - Border:     -
    - Foreground: Dynamically bound to the control's Foreground property.
    -->
    <Style x:Key="DynamicallyBoundForeground" TargetType="FrameworkElement">
        <Setter Property="Control.Foreground" Value="{StaticResource StandardForegroundBrush}" />
        <Setter Property="theming:MouseOverProperties.ForegroundBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
        <Setter Property="theming:PressedProperties.ForegroundBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
        <Setter Property="theming:ActiveProperties.ForegroundBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
        <Setter Property="theming:ActiveProperties.ForegroundBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
    </Style>



    <!--
    Standard Font Properties.
    -->
    <Style x:Key="StandardFontProperties" TargetType="Control">
        <Setter Property="FontFamily" Value="{StaticResource StandardFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource StandardFontSize}" />
        <Setter Property="FontWeight" Value="{StaticResource StandardFontWeight}" />
        <Setter Property="FontStretch" Value="{StaticResource StandardFontStretch}" />
        <Setter Property="FontStyle" Value="{StaticResource StandardFontStyle}" />
    </Style>
    
    <!--
    Alt Font Properties.
    -->
    <Style x:Key="AltFontProperties" TargetType="Control">
        <Setter Property="FontFamily" Value="{StaticResource StandardFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource StandardFontSize}" />
        <Setter Property="FontWeight" Value="{StaticResource AltFontWeight}" />
        <Setter Property="FontStretch" Value="{StaticResource AltFontStretch}" />
        <Setter Property="FontStyle" Value="{StaticResource AltFontStyle}" />
    </Style>



    <!--
    Ambient Shadow, without any elevation values.
    -->
    <Style x:Key="AmbientShadow" TargetType="FrameworkElement">
        <Setter Property="theming:ShadowProperties.ShadowColor" Value="{StaticResource StandardDropShadowColor}" />
        <Setter Property="theming:ShadowProperties.ShadowOpacity" Value="{StaticResource StandardDropShadowOpacity}" />
        <Setter Property="theming:ShadowProperties.ShadowType" Value="{x:Static controls:ShadowType.Ambient}" />
        <Setter Property="theming:ShadowProperties.ShadowDirection" Value="Bottom" />
    </Style>

    <!--
    Directional shadows, without any elevation values.
    -->
    <Style x:Key="TopShadow" TargetType="FrameworkElement" BasedOn="{StaticResource AmbientShadow}">
        <Setter Property="theming:ShadowProperties.ShadowType" Value="{x:Static controls:ShadowType.Directional}" />
        <Setter Property="theming:ShadowProperties.ShadowDirection" Value="Top" />
    </Style>

    <Style x:Key="BottomShadow" TargetType="FrameworkElement" BasedOn="{StaticResource TopShadow}">
        <Setter Property="theming:ShadowProperties.ShadowDirection" Value="Bottom" />
    </Style>

    <Style x:Key="LeftShadow" TargetType="FrameworkElement" BasedOn="{StaticResource TopShadow}">
        <Setter Property="theming:ShadowProperties.ShadowDirection" Value="Left" />
    </Style>

    <Style x:Key="RightShadow" TargetType="FrameworkElement" BasedOn="{StaticResource TopShadow}">
        <Setter Property="theming:ShadowProperties.ShadowDirection" Value="Right" />
    </Style>
    
    <!--
    Elevation levels.
    The 'Interactive' suffix represents a set of values which reacts to user input,
    e.g. MouseOver, Pressed, ...
    If this suffix is not present, the shadow is resting at one elevation level.
    -->
    <Style x:Key="Elevated0Shadow" TargetType="FrameworkElement">
        <Setter Property="theming:ShadowProperties.Elevation" Value="0" />
        <Setter Property="theming:MouseOverProperties.ShadowElevation" Value="0" />
        <Setter Property="theming:PressedProperties.ShadowElevation" Value="0" />
        <Setter Property="theming:ActiveProperties.ShadowElevation" Value="0" />
        <Setter Property="theming:DisabledProperties.ShadowElevation" Value="0" />
    </Style>
    <Style x:Key="NoShadow" TargetType="FrameworkElement" BasedOn="{StaticResource Elevated0Shadow}" />

    <Style x:Key="Elevated0ShadowInteractive" TargetType="FrameworkElement" BasedOn="{StaticResource Elevated0Shadow}">
        <Setter Property="theming:MouseOverProperties.ShadowElevation" Value="1" />
        <Setter Property="theming:PressedProperties.ShadowElevation" Value="1" />
    </Style>

    
    <Style x:Key="Elevated1Shadow" TargetType="FrameworkElement" BasedOn="{StaticResource Elevated0Shadow}">
        <Setter Property="theming:ShadowProperties.Elevation" Value="1" />
        <Setter Property="theming:MouseOverProperties.ShadowElevation" Value="1" />
        <Setter Property="theming:PressedProperties.ShadowElevation" Value="1" />
        <Setter Property="theming:ActiveProperties.ShadowElevation" Value="1" />
        <Setter Property="theming:DisabledProperties.ShadowElevation" Value="1" />
    </Style>

    <Style x:Key="Elevated1ShadowInteractive" TargetType="FrameworkElement" BasedOn="{StaticResource Elevated1Shadow}">
        <Setter Property="theming:MouseOverProperties.ShadowElevation" Value="2" />
        <Setter Property="theming:PressedProperties.ShadowElevation" Value="2" />
    </Style>
    
    
    <Style x:Key="Elevated2Shadow" TargetType="FrameworkElement" BasedOn="{StaticResource Elevated0Shadow}">
        <Setter Property="theming:ShadowProperties.Elevation" Value="2" />
        <Setter Property="theming:MouseOverProperties.ShadowElevation" Value="2" />
        <Setter Property="theming:PressedProperties.ShadowElevation" Value="2" />
        <Setter Property="theming:ActiveProperties.ShadowElevation" Value="2" />
        <Setter Property="theming:DisabledProperties.ShadowElevation" Value="2" />
    </Style>

    <Style x:Key="Elevated2ShadowInteractive" TargetType="FrameworkElement" BasedOn="{StaticResource Elevated2Shadow}">
        <Setter Property="theming:MouseOverProperties.ShadowElevation" Value="3" />
        <Setter Property="theming:PressedProperties.ShadowElevation" Value="3" />
    </Style>
    
    
    <Style x:Key="Elevated3Shadow" TargetType="FrameworkElement" BasedOn="{StaticResource Elevated0Shadow}">
        <Setter Property="theming:ShadowProperties.Elevation" Value="3" />
        <Setter Property="theming:MouseOverProperties.ShadowElevation" Value="3" />
        <Setter Property="theming:PressedProperties.ShadowElevation" Value="3" />
        <Setter Property="theming:ActiveProperties.ShadowElevation" Value="3" />
        <Setter Property="theming:DisabledProperties.ShadowElevation" Value="3" />
    </Style>

    <Style x:Key="Elevated3ShadowInteractive" TargetType="FrameworkElement" BasedOn="{StaticResource Elevated2Shadow}">
        <Setter Property="theming:MouseOverProperties.ShadowElevation" Value="4" />
        <Setter Property="theming:PressedProperties.ShadowElevation" Value="4" />
    </Style>
    
    
    
    
    
    <!--
    TODO:
    Legacy styles from here on.
    Remove when refactoring to the above styles is finished.
    -->
    <Style x:Key="Accent2BorderThemingBase" TargetType="FrameworkElement">
        <Setter Property="theming:ControlProperties.CornerRadius" Value="{StaticResource StandardCornerRadius}" />
        
        <Setter Property="theming:MouseOverProperties.BorderBrush" Value="{StaticResource Accent2HighBrush}" />
        <Setter Property="theming:MouseOverProperties.BackgroundBrush" Value="{StaticResource BaseHighestBrush}" />
        <Setter Property="theming:MouseOverProperties.ForegroundBrush" Value="{StaticResource StandardForegroundBrush}" />

        <Setter Property="theming:PressedProperties.BorderBrush" Value="{StaticResource Accent2LowBrush}" />
        <Setter Property="theming:PressedProperties.BackgroundBrush" Value="{StaticResource BaseHighestBrush}" />
        <Setter Property="theming:PressedProperties.ForegroundBrush" Value="{StaticResource StandardForegroundBrush}" />

        <Setter Property="theming:ActiveProperties.BorderBrush" Value="{StaticResource Accent2MediumBrush}" />
        <Setter Property="theming:ActiveProperties.BackgroundBrush" Value="{StaticResource BaseHighestBrush}" />
        <Setter Property="theming:ActiveProperties.ForegroundBrush" Value="{StaticResource StandardForegroundBrush}" />

        <Setter Property="theming:DisabledProperties.BorderBrush" Value="{StaticResource BaseHighBrush}" />
        <Setter Property="theming:DisabledProperties.BackgroundBrush" Value="Transparent" />
        <Setter Property="theming:DisabledProperties.ForegroundBrush" Value="{StaticResource DisabledForegroundBrush}" />
    </Style>

    <!--
    - Background: Transparent
    - Border:     Accent2
    - Foreground: Bound to Self
    -->
    <Style x:Key="Accent2BorderWithForegroundThemingBase" TargetType="FrameworkElement" BasedOn="{StaticResource Accent2BorderThemingBase}">
        <Setter Property="theming:MouseOverProperties.ForegroundBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
        <Setter Property="theming:PressedProperties.ForegroundBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
        <Setter Property="theming:ActiveProperties.ForegroundBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
    </Style>

    <!--
    For controls like Label, TextBlock, ...
    Only the Foreground is set here.
    - Background: Transparent
    - Border:     Transparent
    - Foreground: Bound to Self
    -->
    <Style x:Key="TextElementThemingBase" TargetType="FrameworkElement">
        <Setter Property="theming:MouseOverProperties.ForegroundBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
        <Setter Property="theming:PressedProperties.ForegroundBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
        <Setter Property="theming:ActiveProperties.ForegroundBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
    </Style>
    
</ResourceDictionary>