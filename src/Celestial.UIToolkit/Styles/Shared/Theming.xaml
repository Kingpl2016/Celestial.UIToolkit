    <!--
    - Border: ContentControl-Brushes
    - Border:     -
    - Foreground: -
    -->
    <Style x:Key="ContentControlBorder" TargetType="FrameworkElement">
        <Setter Property="Control.BorderBrush" Value="{StaticResource ContentControlBorderBrush}" />
        <Setter Property="theming:MouseOverProperties.BorderBrush" Value="{StaticResource ContentControlBorderBrush}" />
        <Setter Property="theming:PressedProperties.BorderBrush" Value="{StaticResource ContentControlBorderBrush}" />
        <Setter Property="theming:DisabledProperties.BorderBrush" Value="{StaticResource ContentControlBorderBrush}" />
