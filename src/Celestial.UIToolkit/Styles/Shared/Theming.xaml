    <Style x:Key="StandardPopup">
        <Setter Property="theming:PopupProperties.BackgroundBrush" Value="{StaticResource PopupBackground}" />
        <Setter Property="theming:PopupProperties.BorderBrush" Value="{StaticResource PopupBorder}" />
        <Setter Property="theming:PopupProperties.BorderThickness" Value="{StaticResource SlimBorderThickness}" />
        <Setter Property="theming:PopupProperties.Padding" Value="0" />
        <Setter Property="theming:PopupProperties.CornerRadius" Value="{StaticResource PrimaryCornerRadius}" />
    </Style>
    
 

    <!-- Binds the ZIndex to the current elevation. Should be used by most controls,
         but I want this to be opt-in, since the ZIndex might be hard-set in some scenarios. -->
    <Style x:Key="ElevationZIndex">
        <Setter Property="Panel.ZIndex">
            <Setter.Value>
                <Binding Path="(controls:ThemeShadow.Elevation)"
                         RelativeSource="{RelativeSource Self}" />
            </Setter.Value>
        </Setter>
    </Style>

    
    
    
    <!--
    For controls like Label, TextBlock, ...
    - Foreground: Bound to Self
    -->
    <Style x:Key="ForegroundBasedThemingProperties">
        <Setter Property="theming:MouseOverProperties.ForegroundBrush" Value="{c:SelfBinding Foreground}" />
        <Setter Property="theming:PressedProperties.ForegroundBrush" Value="{c:SelfBinding Foreground}" />
        <Setter Property="theming:ActiveProperties.ForegroundBrush" Value="{c:SelfBinding Foreground}" />
        <Setter Property="theming:DisabledProperties.ForegroundBrush" Value="{StaticResource DisabledForegroundBrush}" />
        <Setter Property="theming:MouseOverActiveProperties.ForegroundBrush" Value="{c:SelfBinding Foreground}" />
    </Style>
    
