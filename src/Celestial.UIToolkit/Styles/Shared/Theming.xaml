        <Setter Property="theming:MouseOverProperties.BackgroundBrush" Value="{StaticResource ContentControlBackgroundBrush}" />
        <Setter Property="theming:PressedProperties.BackgroundBrush" Value="{StaticResource ContentControlBackgroundBrush}" />
        <Setter Property="theming:DisabledProperties.BackgroundBrush" Value="{StaticResource ContentControlBackgroundBrush}" />
        <Setter Property="theming:ActiveProperties.BackgroundBrush" Value="{StaticResource ContentControlBackgroundBrush}" />
    </Style>

    <!--
    - Background: Normal: StandardControl; Accent1 for special states.
    - Border:     -
    - Foreground: -
