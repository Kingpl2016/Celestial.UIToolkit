<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:theming="clr-namespace:Celestial.UIToolkit.Theming">

    <!--
    This file contains base-styles for nearly any type of control.
    This includes attached properties from the Theming namespace and
    frequently used properties like "Foreground", "Background", ...
    -->


    <!--
    - Background: Transparent
    - Border:     -
    - Foreground: -
    -->
    <Style x:Key="TransparentBackground" TargetType="FrameworkElement">
        <Setter Property="Control.Background" Value="Transparent" />
        <Setter Property="theming:MouseOverProperties.BackgroundColor" Value="Transparent" />
        <Setter Property="theming:PressedProperties.BackgroundColor" Value="Transparent" />
        <Setter Property="theming:DisabledProperties.BackgroundColor" Value="Transparent" />
        <Setter Property="theming:ActiveProperties.BackgroundColor" Value="Transparent" />
    </Style>

    <!--
    - Background: BaseHighest
    - Border:     -
    - Foreground: -
    -->
    <Style x:Key="BaseHighestBackground" TargetType="FrameworkElement">
        <Setter Property="Control.Background" Value="{StaticResource BaseHighestBrush}" />
        <Setter Property="theming:MouseOverProperties.BackgroundColor" Value="{StaticResource BaseHighestColor}" />
        <Setter Property="theming:PressedProperties.BackgroundColor" Value="{StaticResource BaseHighestColor}" />
        <Setter Property="theming:DisabledProperties.BackgroundColor" Value="{StaticResource BaseHighestColor}" />
        <Setter Property="theming:ActiveProperties.BackgroundColor" Value="{StaticResource BaseHighestColor}" />
    </Style>

    <!--
    - Background: Standard (Base* Variations)
    - Border:     -
    - Foreground: -
    -->
    <Style x:Key="StandardBackground" TargetType="FrameworkElement">
        <Setter Property="Control.Background" Value="{StaticResource BaseMediumBrush}" />
        <Setter Property="theming:MouseOverProperties.BackgroundColor" Value="{StaticResource BaseHighColor}" />
        <Setter Property="theming:PressedProperties.BackgroundColor" Value="{StaticResource BaseLowColor}" />
        <Setter Property="theming:DisabledProperties.BackgroundColor" Value="{StaticResource BaseHighColor}" />
        <Setter Property="theming:ActiveProperties.BackgroundColor" Value="{StaticResource BaseLowColor}" />
    </Style>

    <!--
    - Background: Normal: StandardControl; Accent1 for special states.
    - Border:     -
    - Foreground: -
    -->
    <Style x:Key="ControlAccent1Background" TargetType="FrameworkElement">
        <Setter Property="Control.Background" Value="{StaticResource StandardControlBackgroundBrush}" />
        <Setter Property="theming:MouseOverProperties.BackgroundColor" Value="{StaticResource Accent1HighColor}" />
        <Setter Property="theming:PressedProperties.BackgroundColor" Value="{StaticResource Accent1LowColor}" />
        <Setter Property="theming:DisabledProperties.BackgroundColor" Value="{StaticResource BaseHighColor}" />
        <Setter Property="theming:ActiveProperties.BackgroundColor" Value="{StaticResource Accent1LowColor}" />
    </Style>
    
    <!--
    - Background: Normal: StandardControl; Accent2 for special states.
    - Border:     -
    - Foreground: -
    -->
    <Style x:Key="ControlAccent2Background" TargetType="FrameworkElement">
        <Setter Property="Control.Background" Value="{StaticResource StandardControlBackgroundBrush}" />
        <Setter Property="theming:MouseOverProperties.BackgroundColor" Value="{StaticResource Accent2HighColor}" />
        <Setter Property="theming:PressedProperties.BackgroundColor" Value="{StaticResource Accent2LowColor}" />
        <Setter Property="theming:DisabledProperties.BackgroundColor" Value="{StaticResource BaseHighColor}" />
        <Setter Property="theming:ActiveProperties.BackgroundColor" Value="{StaticResource Accent2LowColor}" />
    </Style>
    
    <!--
    - Background: Accent1
    - Border:     -
    - Foreground: -
    -->
    <Style x:Key="Accent1Background" TargetType="FrameworkElement">
        <Setter Property="Control.Background" Value="{StaticResource Accent1MediumBrush}" />
        <Setter Property="theming:MouseOverProperties.BackgroundColor" Value="{StaticResource Accent1HighColor}" />
        <Setter Property="theming:PressedProperties.BackgroundColor" Value="{StaticResource Accent1LowColor}" />
        <Setter Property="theming:DisabledProperties.BackgroundColor" Value="{StaticResource BaseHighColor}" />
        <Setter Property="theming:ActiveProperties.BackgroundColor" Value="{StaticResource Accent1LowColor}" />
    </Style>
    
    <!--
    - Background: Accent2
    - Border:     -
    - Foreground: -
    -->
    <Style x:Key="Accent2Background" TargetType="FrameworkElement">
        <Setter Property="Control.Background" Value="{StaticResource Accent2MediumBrush}" />
        <Setter Property="theming:MouseOverProperties.BackgroundColor" Value="{StaticResource Accent2HighColor}" />
        <Setter Property="theming:PressedProperties.BackgroundColor" Value="{StaticResource Accent2LowColor}" />
        <Setter Property="theming:DisabledProperties.BackgroundColor" Value="{StaticResource BaseHighColor}" />
        <Setter Property="theming:ActiveProperties.BackgroundColor" Value="{StaticResource Accent2LowColor}" />
    </Style>
    
    
    
    <!--
    - Background: -
    - Border:     Transparent
    - Foreground: -
    -->
    <Style x:Key="TransparentBorder" TargetType="FrameworkElement">
        <Setter Property="Control.BorderBrush" Value="Transparent" />
        <Setter Property="theming:MouseOverProperties.BorderColor" Value="Transparent" />
        <Setter Property="theming:PressedProperties.BorderColor" Value="Transparent" />
        <Setter Property="theming:DisabledProperties.BorderColor" Value="Transparent" />
        <Setter Property="theming:ActiveProperties.BorderColor" Value="Transparent" />
    </Style>

    <!--
    - Background: -
    - Border:     Standard (Base* Variations)
    - Foreground: -
    -->
    <Style x:Key="StandardBorder" TargetType="FrameworkElement">
        <Setter Property="Control.BorderBrush" Value="{StaticResource BaseMediumBrush}" />
        <Setter Property="theming:MouseOverProperties.BorderColor" Value="{StaticResource BaseHighColor}" />
        <Setter Property="theming:PressedProperties.BorderColor" Value="{StaticResource BaseLowColor}" />
        <Setter Property="theming:DisabledProperties.BorderColor" Value="{StaticResource BaseHighColor}" />
        <Setter Property="theming:ActiveProperties.BorderColor" Value="{StaticResource BaseLowColor}" />
    </Style>

    <!--
    - Background: -
    - Border:     Normal: StandardControl; Accent1 for special states.
    - Foreground: -
    -->
    <Style x:Key="ControlAccent1Border" TargetType="FrameworkElement">
        <Setter Property="Control.BorderBrush" Value="{StaticResource StandardControlBorderBrush}" />
        <Setter Property="theming:MouseOverProperties.BorderColor" Value="{StaticResource Accent1HighColor}" />
        <Setter Property="theming:PressedProperties.BorderColor" Value="{StaticResource Accent1LowColor}" />
        <Setter Property="theming:DisabledProperties.BorderColor" Value="{StaticResource BaseHighColor}" />
        <Setter Property="theming:ActiveProperties.BorderColor" Value="{StaticResource Accent1LowColor}" />
    </Style>

    <!--
    - Background: -
    - Border:     Normal: StandardControl; Accent2 for special states.
    - Foreground: -
    -->
    <Style x:Key="ControlAccent2Border" TargetType="FrameworkElement">
        <Setter Property="Control.BorderBrush" Value="{StaticResource StandardControlBorderBrush}" />
        <Setter Property="theming:MouseOverProperties.BorderColor" Value="{StaticResource Accent2HighColor}" />
        <Setter Property="theming:PressedProperties.BorderColor" Value="{StaticResource Accent2LowColor}" />
        <Setter Property="theming:DisabledProperties.BorderColor" Value="{StaticResource BaseHighColor}" />
        <Setter Property="theming:ActiveProperties.BorderColor" Value="{StaticResource Accent2LowColor}" />
    </Style>

    <!--
    - Background: -
    - Border:     Accent1
    - Foreground: -
    -->
    <Style x:Key="Accent1Border" TargetType="FrameworkElement">
        <Setter Property="Control.BorderBrush" Value="{StaticResource Accent1MediumBrush}" />
        <Setter Property="theming:MouseOverProperties.BorderColor" Value="{StaticResource Accent1HighColor}" />
        <Setter Property="theming:PressedProperties.BorderColor" Value="{StaticResource Accent1LowColor}" />
        <Setter Property="theming:DisabledProperties.BorderColor" Value="{StaticResource BaseHighColor}" />
        <Setter Property="theming:ActiveProperties.BorderColor" Value="{StaticResource Accent1LowColor}" />
    </Style>

    <!--
    - Background: -
    - Border:     Accent2
    - Foreground: -
    -->
    <Style x:Key="Accent2Border" TargetType="FrameworkElement">
        <Setter Property="Control.BorderBrush" Value="{StaticResource Accent2MediumBrush}" />
        <Setter Property="theming:MouseOverProperties.BorderColor" Value="{StaticResource Accent2HighColor}" />
        <Setter Property="theming:PressedProperties.BorderColor" Value="{StaticResource Accent2LowColor}" />
        <Setter Property="theming:DisabledProperties.BorderColor" Value="{StaticResource BaseHighColor}" />
        <Setter Property="theming:ActiveProperties.BorderColor" Value="{StaticResource Accent2LowColor}" />
    </Style>



    <!--
    - Background: -
    - Border:     -
    - Foreground: StandardForegroundBrush / DisabledForegroundBrush
    -->
    <Style x:Key="StandardForeground" TargetType="FrameworkElement">
        <Setter Property="Control.Foreground" Value="{StaticResource StandardForegroundBrush}" />
        <Setter Property="theming:MouseOverProperties.ForegroundBrush" Value="{StaticResource StandardForegroundBrush}" />
        <Setter Property="theming:PressedProperties.ForegroundBrush" Value="{StaticResource StandardForegroundBrush}" />
        <Setter Property="theming:DisabledProperties.ForegroundBrush" Value="{StaticResource DisabledForegroundBrush}" />
        <Setter Property="theming:ActiveProperties.ForegroundBrush" Value="{StaticResource StandardForegroundBrush}" />
    </Style>
    
    <!--
    - Background: -
    - Border:     -
    - Foreground: OnAccent1
    -->
    <Style x:Key="OnAccent1Foreground" TargetType="FrameworkElement">
        <Setter Property="Control.Foreground" Value="{StaticResource OnAccent1ForegroundBrush}" />
        <Setter Property="theming:MouseOverProperties.ForegroundBrush" Value="{StaticResource OnAccent1ForegroundBrush}" />
        <Setter Property="theming:PressedProperties.ForegroundBrush" Value="{StaticResource OnAccent1ForegroundBrush}" />
        <Setter Property="theming:DisabledProperties.ForegroundBrush" Value="{StaticResource OnAccent1DisabledForegroundBrush}" />
        <Setter Property="theming:ActiveProperties.ForegroundBrush" Value="{StaticResource OnAccent1ForegroundBrush}" />
    </Style>
    
    <!--
    - Background: -
    - Border:     -
    - Foreground: OnAccent2
    -->
    <Style x:Key="OnAccent2Foreground" TargetType="FrameworkElement">
        <Setter Property="Control.Foreground" Value="{StaticResource OnAccent2ForegroundBrush}" />
        <Setter Property="theming:MouseOverProperties.ForegroundBrush" Value="{StaticResource OnAccent2ForegroundBrush}" />
        <Setter Property="theming:PressedProperties.ForegroundBrush" Value="{StaticResource OnAccent2ForegroundBrush}" />
        <Setter Property="theming:DisabledProperties.ForegroundBrush" Value="{StaticResource OnAccent2DisabledForegroundBrush}" />
        <Setter Property="theming:ActiveProperties.ForegroundBrush" Value="{StaticResource OnAccent2ForegroundBrush}" />
    </Style>

    <!--
    - Background: -
    - Border:     -
    - Foreground: Dynamically bound to the control's Foreground property.
    -->
    <Style x:Key="DynamicallyBoundForeground" TargetType="FrameworkElement">
        <Setter Property="Control.Foreground" Value="{StaticResource StandardForegroundBrush}" />
        <Setter Property="theming:MouseOverProperties.ForegroundBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
        <Setter Property="theming:PressedProperties.ForegroundBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
        <Setter Property="theming:ActiveProperties.ForegroundBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
        <Setter Property="theming:ActiveProperties.ForegroundBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
    </Style>



    <!--
    Standard Font Properties.
    -->
    <Style x:Key="StandardFontProperties" TargetType="Control">
        <Setter Property="FontFamily" Value="{StaticResource StandardFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource StandardFontSize}" />
        <Setter Property="FontWeight" Value="{StaticResource StandardFontWeight}" />
        <Setter Property="FontStretch" Value="{StaticResource StandardFontStretch}" />
        <Setter Property="FontStyle" Value="{StaticResource StandardFontStyle}" />
    </Style>
    
    <!--
    Alt Font Properties.
    -->
    <Style x:Key="AltFontProperties" TargetType="Control">
        <Setter Property="FontFamily" Value="{StaticResource StandardFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource StandardFontSize}" />
        <Setter Property="FontWeight" Value="{StaticResource AltFontWeight}" />
        <Setter Property="FontStretch" Value="{StaticResource AltFontStretch}" />
        <Setter Property="FontStyle" Value="{StaticResource AltFontStyle}" />
    </Style>
    
    
    
    
    
    <!--
    TODO:
    Legacy styles from here on.
    Remove when refactoring to the above styles is finished.
    -->
    <Style x:Key="Accent2BorderThemingBase" TargetType="FrameworkElement">
        <Setter Property="theming:ControlProperties.CornerRadius" Value="{StaticResource StandardCornerRadius}" />
        
        <Setter Property="theming:MouseOverProperties.BorderColor" Value="{StaticResource Accent2HighColor}" />
        <Setter Property="theming:MouseOverProperties.BackgroundColor" Value="{StaticResource BaseHighestColor}" />
        <Setter Property="theming:MouseOverProperties.ForegroundBrush" Value="{StaticResource StandardForegroundBrush}" />

        <Setter Property="theming:PressedProperties.BorderColor" Value="{StaticResource Accent2LowColor}" />
        <Setter Property="theming:PressedProperties.BackgroundColor" Value="{StaticResource BaseHighestColor}" />
        <Setter Property="theming:PressedProperties.ForegroundBrush" Value="{StaticResource StandardForegroundBrush}" />

        <Setter Property="theming:ActiveProperties.BorderColor" Value="{StaticResource Accent2MediumColor}" />
        <Setter Property="theming:ActiveProperties.BackgroundColor" Value="{StaticResource BaseHighestColor}" />
        <Setter Property="theming:ActiveProperties.ForegroundBrush" Value="{StaticResource StandardForegroundBrush}" />

        <Setter Property="theming:DisabledProperties.BorderColor" Value="{StaticResource BaseHighColor}" />
        <Setter Property="theming:DisabledProperties.BackgroundColor" Value="Transparent" />
        <Setter Property="theming:DisabledProperties.ForegroundBrush" Value="{StaticResource DisabledForegroundBrush}" />
    </Style>

    <!--
    - Background: Transparent
    - Border:     Accent2
    - Foreground: Bound to Self
    -->
    <Style x:Key="Accent2BorderWithForegroundThemingBase" TargetType="FrameworkElement" BasedOn="{StaticResource Accent2BorderThemingBase}">
        <Setter Property="theming:MouseOverProperties.ForegroundBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
        <Setter Property="theming:PressedProperties.ForegroundBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
        <Setter Property="theming:ActiveProperties.ForegroundBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
    </Style>

    <!--
    For controls like Label, TextBlock, ...
    Only the Foreground is set here.
    - Background: Transparent
    - Border:     Transparent
    - Foreground: Bound to Self
    -->
    <Style x:Key="TextElementThemingBase" TargetType="FrameworkElement">
        <Setter Property="theming:MouseOverProperties.ForegroundBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
        <Setter Property="theming:PressedProperties.ForegroundBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
        <Setter Property="theming:ActiveProperties.ForegroundBrush" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}" />
    </Style>
    
</ResourceDictionary>