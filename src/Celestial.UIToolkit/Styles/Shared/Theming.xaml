        <Setter Property="theming:DisabledProperties.BackgroundBrush" Value="{StaticResource BaseHighBrush}" />
        <Setter Property="theming:ActiveProperties.BackgroundBrush" Value="{StaticResource Accent1LowBrush}" />
    </Style>
    
    <!--
    - Background: Normal: StandardControl; Accent2 for special states.
    - Border:     -
    - Foreground: -
