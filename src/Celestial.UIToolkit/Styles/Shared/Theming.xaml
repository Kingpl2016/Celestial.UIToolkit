<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="http://celestial-ui.com"
                    xmlns:theming="clr-namespace:Celestial.UIToolkit.Theming"
                    xmlns:controls="clr-namespace:Celestial.UIToolkit.Controls">

    <!--
    This file contains base-styles for nearly any type of control.
    This includes attached properties from the Theming namespace and
    frequently used properties like "Foreground", "Background", ...
    -->


    <!--
    - Background: Transparent
    - Border:     -
    - Foreground: -
    -->
    <Style x:Key="TransparentBackground" TargetType="FrameworkElement">
        <Setter Property="Control.Background" Value="Transparent" />
        <Setter Property="theming:MouseOverProperties.BackgroundBrush" Value="Transparent" />
        <Setter Property="theming:PressedProperties.BackgroundBrush" Value="Transparent" />
        <Setter Property="theming:DisabledProperties.BackgroundBrush" Value="Transparent" />
        <Setter Property="theming:ActiveProperties.BackgroundBrush" Value="Transparent" />
    </Style>

    <!--
    - Background: BaseHighest
    - Border:     -
    - Foreground: -
    -->
    <Style x:Key="BaseHighestBackground" TargetType="FrameworkElement">
        <Setter Property="Control.Background" Value="{StaticResource BaseHighestBrush}" />
        <Setter Property="theming:MouseOverProperties.BackgroundBrush" Value="{StaticResource BaseHighestBrush}" />
        <Setter Property="theming:PressedProperties.BackgroundBrush" Value="{StaticResource BaseHighestBrush}" />
        <Setter Property="theming:DisabledProperties.BackgroundBrush" Value="{StaticResource BaseHighestBrush}" />
        <Setter Property="theming:ActiveProperties.BackgroundBrush" Value="{StaticResource BaseHighestBrush}" />
    </Style>

    <!--
    - Background: Standard (Base* Variations)
    - Border:     -
    - Foreground: -
    -->
    <Style x:Key="StandardBackground" TargetType="FrameworkElement">
        <Setter Property="Control.Background" Value="{StaticResource BaseMediumBrush}" />
        <Setter Property="theming:MouseOverProperties.BackgroundBrush" Value="{StaticResource BaseHighBrush}" />
        <Setter Property="theming:PressedProperties.BackgroundBrush" Value="{StaticResource BaseLowBrush}" />
        <Setter Property="theming:DisabledProperties.BackgroundBrush" Value="{StaticResource BaseHighBrush}" />
        <Setter Property="theming:ActiveProperties.BackgroundBrush" Value="{StaticResource BaseLowBrush}" />
    </Style>

    <!--
    - Background: ContentControl-Brushes
