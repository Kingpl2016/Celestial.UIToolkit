<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="http://celestial-ui.com"
                    xmlns:controls="clr-namespace:Celestial.UIToolkit.Controls">

    <Style x:Key="PrimaryIconElement" TargetType="controls:IconElement">
        <Setter Property="SnapsToDevicePixels" Value="False" />
        <Setter Property="UseLayoutRounding" Value="False" />
        <Setter Property="Width" Value="{c:GridUnit 4}" />
        <Setter Property="Width" Value="{c:GridUnit 4}" />
    </Style>

    <Style TargetType="controls:IconElement" BasedOn="{StaticResource PrimaryIconElement}" />
    <Style TargetType="controls:PathIcon" BasedOn="{StaticResource PrimaryIconElement}" />

    <Style x:Key="SmallIconElement" TargetType="controls:IconElement">
        <Setter Property="Width" Value="{c:GridUnit 3}" />
        <Setter Property="Height" Value="{c:GridUnit 3}" />
    </Style>

    <Style x:Key="LargeIconElement" TargetType="controls:IconElement">
        <Setter Property="Width" Value="{c:GridUnit 5}" />
        <Setter Property="Height" Value="{c:GridUnit 5}" />
    </Style>

</ResourceDictionary>