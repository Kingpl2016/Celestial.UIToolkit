<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="http://celestial-ui.com"
                    xmlns:controls="clr-namespace:Celestial.UIToolkit.Controls">

    <Style x:Key="StandardIconElement" TargetType="controls:IconElement">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Width" Value="{c:GridUnit 5}" />
        <Setter Property="Width" Value="{c:GridUnit 5}" />
    </Style>

    <Style TargetType="controls:IconElement" BasedOn="{StaticResource StandardIconElement}" />
    <Style TargetType="controls:PathIcon" BasedOn="{StaticResource StandardIconElement}" />

</ResourceDictionary>