<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:c="http://celestial-ui.com"
                    xmlns:theming="clr-namespace:Celestial.UIToolkit.Theming"
                    xmlns:controls="clr-namespace:Celestial.UIToolkit.Controls">

    <Style x:Key="StandardContentControl" TargetType="ContentControl" BasedOn="{c:MergeStyles 'StandardForeground StandardFontProperties'}">
        <!-- This simply sets/fixes the ContentControl's foreground. 
             Since no other properties are set, this receives the prefix "Standard". -->
    </Style>

    <Style TargetType="ContentControl" BasedOn="{StaticResource StandardContentControl}" />

</ResourceDictionary>