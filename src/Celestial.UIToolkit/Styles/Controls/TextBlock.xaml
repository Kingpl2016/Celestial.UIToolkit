<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Celestial.UIToolkit"
                    xmlns:theming="clr-namespace:Celestial.UIToolkit.Theming">

    <ResourceDictionary.MergedDictionaries>
        <local:SharedResourceDictionary Source="../Shared/Theming.xaml" />
    </ResourceDictionary.MergedDictionaries>
    
    <Style x:Key="StandardTextBlock" TargetType="TextBlock" BasedOn="{StaticResource TextElementThemingBase}">
        <Setter Property="FontSize" Value="{StaticResource StandardFontSize}" />
        <Setter Property="FontWeight" Value="{StaticResource StandardFontWeight}" />
        <Setter Property="FontStyle" Value="{StaticResource StandardFontStyle}" />
        <Setter Property="FontStretch" Value="{StaticResource StandardFontStretch}" />
        <Setter Property="FontFamily" Value="{StaticResource StandardFontFamily}" />
        <Setter Property="Foreground" Value="{StaticResource StandardForegroundBrush}" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="{Binding Path=(theming:MouseOverProperties.ForegroundBrush), RelativeSource={RelativeSource Self}}" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground" Value="{Binding Path=(theming:DisabledProperties.ForegroundBrush), RelativeSource={RelativeSource Self}}" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="TextBlock" BasedOn="{StaticResource StandardTextBlock}" />

    <Style x:Key="AltTextBlock" TargetType="TextBlock" BasedOn="{StaticResource StandardTextBlock}">
        <Setter Property="FontWeight" Value="{StaticResource AltFontWeight}" />
        <Setter Property="FontStyle" Value="{StaticResource AltFontStyle}" />
        <Setter Property="FontStretch" Value="{StaticResource AltFontStretch}" />
    </Style>

    <Style x:Key="HintTextBlock" TargetType="TextBlock" BasedOn="{StaticResource StandardTextBlock}">
        <Setter Property="Foreground" Value="{StaticResource HintForegroundBrush}" />
        <Setter Property="FontWeight" Value="{StaticResource HintFontWeight}" />
        <Setter Property="FontStyle" Value="{StaticResource HintFontStyle}" />
        <Setter Property="FontStretch" Value="{StaticResource HintFontStretch}" />
    </Style>

    <Style x:Key="SubtleTextBlock" TargetType="TextBlock" BasedOn="{StaticResource StandardTextBlock}">
        <Setter Property="Foreground" Value="{StaticResource SubtleForegroundBrush}" />
        <Setter Property="FontWeight" Value="{StaticResource SubtleFontWeight}" />
        <Setter Property="FontStyle" Value="{StaticResource SubtleFontStyle}" />
        <Setter Property="FontStretch" Value="{StaticResource SubtleFontStretch}" />
    </Style>

    <Style x:Key="TitleTextBlock" TargetType="TextBlock" BasedOn="{StaticResource StandardTextBlock}">
        <Setter Property="FontSize" Value="{StaticResource TitleFontSize}" />
        <Setter Property="FontWeight" Value="{StaticResource TitleFontWeight}" />
        <Setter Property="FontStyle" Value="{StaticResource TitleFontStyle}" />
        <Setter Property="FontStretch" Value="{StaticResource TitleFontStretch}" />
        <Setter Property="FontFamily" Value="{StaticResource TitleFontFamily}" />
    </Style>

    <Style x:Key="SubTitleTextBlock" TargetType="TextBlock" BasedOn="{StaticResource StandardTextBlock}">
        <Setter Property="FontSize" Value="{StaticResource SubTitleFontSize}" />
        <Setter Property="FontWeight" Value="{StaticResource SubTitleFontWeight}" />
        <Setter Property="FontStyle" Value="{StaticResource SubTitleFontStyle}" />
        <Setter Property="FontStretch" Value="{StaticResource SubTitleFontStretch}" />
        <Setter Property="FontFamily" Value="{StaticResource SubTitleFontFamily}" />
    </Style>

    <Style x:Key="TextBlockOverrideStyle" TargetType="TextBlock" BasedOn="{StaticResource TextElementThemingBase}">
        <!-- Default TextBlock Style override -> https://stackoverflow.com/a/5330534 -->
        <Setter Property="Text" Value="{Binding}" />
    </Style>
    
</ResourceDictionary>