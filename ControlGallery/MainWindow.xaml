<Window x:Class="ControlGallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:pages="clr-namespace:ControlGallery.Pages"
        xmlns:aurora="clr-namespace:Aurora.UIToolkit;assembly=Aurora.UIToolkit"
        mc:Ignorable="d"
        Title="Aurora UI Toolkit - Control Gallery"
        Width="1000" Height="600">

    <aurora:MarginHelper.MarginGroups>
        <aurora:MarginGroup Name="Title" Margin="0,0,0,10" />
        <aurora:MarginGroup Name="CloseHorizontal" Margin="0,0,5,0" />
        <aurora:MarginGroup Name="CloseVertical" Margin="0,0,0,5" />
        <aurora:MarginGroup Name="ControlGroup" Margin="10" />
    </aurora:MarginHelper.MarginGroups>
    
    <TabControl>
        <TabItem Header="Colors">
            <pages:Colors />
        </TabItem>
        <TabItem Header="Text">
            <pages:Text />
        </TabItem>
        <TabItem Header="Buttons">
            <pages:Buttons />
        </TabItem>
        <TabItem Header="Toggleables">
            <pages:Toggleables />
        </TabItem>
    </TabControl>
    
</Window>
