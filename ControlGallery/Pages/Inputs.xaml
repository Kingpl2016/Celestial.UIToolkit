<UserControl x:Class="ControlGallery.Pages.Inputs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c="clr-namespace:Celestial.UIToolkit;assembly=Celestial.UIToolkit"
             xmlns:local="clr-namespace:ControlGallery.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UniformGrid HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 c:MarginHelper.ChildrenGroup="ControlGroup"
                 Columns="3">

        <StackPanel c:MarginHelper.ChildrenGroup="CloseVertical">
            <TextBlock Style="{StaticResource TitleTextBlock}"
                       c:MarginHelper.MarginGroup="Title">TextBox</TextBlock>
            <TextBox>TextBox</TextBox>
            <TextBox IsReadOnly="True">ReadOnly</TextBox>
            <TextBox IsEnabled="False">Disabled</TextBox>
        </StackPanel>

    </UniformGrid>
    
</UserControl>
